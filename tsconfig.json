{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": false,
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es2017.object",
      "es2016",
      "esnext.asynciterable"
    ],
    // "allowSyntheticDefaultImports": true  // import module without wildcard but conflict with ts-jest
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

